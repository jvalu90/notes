extends index

block body
    div(class='note-form-page')
        form(action='/notes', method='post')
            div
                input(type='text', id='title', name='title', placeholder='Write the title', autocomplete='off' autofocus)
            div
                textarea(id='body', name='body', rows='8', placeholder='Write the text...')

            div(class='form-actions')
                a(href='/', class='btn') Cancel
                button(type='submit', class='btn btn-primary') Create Note
    script.
        var textarea = document.getElementById('body')
        var heightLimit = 1000; /*Maximun height: 1000px*/

        textarea.oninput = function() {
            textarea.style.height = ''; /*Reset the height*/
            textarea.style.height = Math.min(textarea.scrollHeight, heightLimit) + 'px';
        };